class Solution {
    private Double[][] memo;

    public double soupServings(int volume) {
        if (volume > 5000) return 1.0;

        int portions = (int) Math.ceil(volume / 25.0);
        memo = new Double[portions + 1][portions + 1];

        return probability(portions, portions);
    }

    private double probability(int a, int b) {
        if (a <= 0 && b <= 0) return 0.5;
        if (a <= 0) return 1.0;
        if (b <= 0) return 0.0;

        if (memo[a][b] != null) return memo[a][b];

        double res = 0.25 * (
            probability(a - 4, b) +
            probability(a - 3, b - 1) +
            probability(a - 2, b - 2) +
            probability(a - 1, b - 3)
        );

        memo[a][b] = res;
        return res;
    }
}
