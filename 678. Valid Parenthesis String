class Solution {
    public boolean checkValidString(String s) {
        int left = 0, right = 0;

        for (char c : s.toCharArray()) {
            if (c == '(') {
                left++;
                right++;
            } else if (c == ')') {
                if (left > 0)
                    left--;
                right--;
            } else {
                if (left > 0)
                    left--;
                right++;
            }

            if (right < 0)
                return false;
        }

        return left == 0;
    }
}
